<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sevenflying.greenhouseclient.app" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/blossom"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sevenflying.greenhouseclient.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sevenflying.greenhouseclient.app.sensortab.SensorStatusActivity"/>
        <activity android:name="com.sevenflying.greenhouseclient.app.alertstab.AlertCreationActivity"/>
        <activity android:name="com.sevenflying.greenhouseclient.app.statustab.MonItemStatusActivity"/>
        <activity android:name="com.sevenflying.greenhouseclient.app.statustab.MoniItemCreationActivity"/>
        <service android:name="com.sevenflying.greenhouseclient.domain.AlertService"
            android:enabled="true"/>
        <receiver android:name="com.sevenflying.greenhouseclient.domain.AlarmReceiver"/>
    </application>

</manifest>
